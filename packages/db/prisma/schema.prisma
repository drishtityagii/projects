generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String       @id @default(cuid())
  source       String
  sourceId     String
  brand        String
  name         String
  imageUrl     String?
  productUrl   String
  price        Decimal?
  ingredients  String?
  tags         String[]
  popularity   Int          @default(0)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  RoutineItems RoutineItem[]

  @@index([name, brand])
  @@unique([source, sourceId], map: "source_key")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  createdAt DateTime  @default(now())
  routines  Routine[]
}

model Routine {
  id        String       @id @default(cuid())
  userId    String
  period    String       // 'AM' | 'PM'
  name      String       @default("Default")
  items     RoutineItem[]
  updatedAt DateTime     @updatedAt

  user      User         @relation(fields: [userId], references: [id])

  @@unique([userId, period, name])
}

model RoutineItem {
  id        String   @id @default(cuid())
  routineId String
  productId String
  step      Int
  rationale String?
  warnings  String[]

  routine   Routine @relation(fields: [routineId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@unique([routineId, productId])
}
